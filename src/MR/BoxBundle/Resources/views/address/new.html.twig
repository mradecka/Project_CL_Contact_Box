{% extends '::base.html.twig' %}
{% block title %}Dodawanie adresu{% endblock %}
{% block body %}
    <div class="col-lg-2">
        <form action="{{path('address_index', { 'id': id })}}">
            <input type="submit" class="btn btn-info pull-left" value="PowrÃ³t">
        </form>
    </div>
    <div class="col-lg-10">
        <h1>Dodawanie nowego adresu:</h1>

        {{form_start(form, { 'attr': {'class': 'form-horizontale col-md-4'}}) }}
        <table class="table">
            <div class="form-group">
                <label class="control-label col-sm-6">Miasto:</label>
                <div class="col-sm-6">

                    {{form_widget(form.city)}}
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-6">Ulica:</label>
                <div class="col-sm-6">
                    {{form_widget(form.street)}}
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-6">Numer domu:</label>
                <div class="col-sm-6">
                    {{form_widget(form.houseNumber)}}
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-6">Numer mieszkania:</label>
                <div class="col-sm-6">
                    {{form_widget(form.flatNumber)}}
                </div>
            </div>
        </table> 
        <div class="form-group">
            <div class="col-sm-offset-2 col-lg-10">
                <input type="submit" class="btn btn-info pull-left" value="Zapisz" />

            </div>
        </div>
        {{form_end(form)}}
    {% endblock %}
