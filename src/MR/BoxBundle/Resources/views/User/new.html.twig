{% extends "::base.html.twig" %}

{% block title %}Dodawanie kontaktu{% endblock %}

{% block body %}
    <div class="col-lg-2">
    </div>
    <div class="col-lg-10">
        <h1>Dodawanie nowego kontaktu:</h1>
        {%if info%}
            <h3>{{info}}</h3>  
        {%endif%}
        {%if form%} 
            {{form_start(form, { 'attr': {'class': 'form-horizontale col-md-4'}}) }}

            <div class="form-group">
                <label class="control-label col-sm-6" for="email">ImiÄ™:</label>
                <div class="col-sm-6">

                    {{form_widget(form.name)}}
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-6" for="pwd">Nazwisko:</label>
                <div class="col-sm-6">
                    {{form_widget(form.surname)}}
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-6" for="pwd">Opis:</label>
                <div class="col-sm-6">
                    {{form_widget(form.description)}}
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    {{form_widget(form.new,  {'attr': {'class': 'btn btn-info'}}) }}
                </div>
            </div> 
            {{form_end(form)}}
        {%endif%}
    </div>
{% endblock %}
