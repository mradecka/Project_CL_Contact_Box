{% extends "::base.html.twig" %}

{% block title %}Kontakty{% endblock %}

{% block body %}
    <div class="col-lg-2">
    </div>
    <div class="col-lg-8">
        <h1>Kontakty</h1>
        {%if info%}
            <h3>{{info}}</h3>  
        {%endif%}
        {%if users%} 
            <div class="table table-striped">
                <table class="table table-striped">
                    <tr>
                        <th>Lp.</th>
                        <th>Nazwisko</th>
                        <th>Imię</th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                    {%for user in users%}
                        <tr>
                            <td>{{ loop.index }}</td>
                            <td>{{user.surname}}</td>
                            <td>{{user.name}}</td>   
                            <td><a href="{{path('showOneUser', {'id':user.id})}}">Szczegóły</a></td>   
                            <td><a href="{{path('modifyUser', {'id':user.id})}}">Edytuj</a></td>   
                            <td><a href="{{path('deleteUser', {'id':user.id})}}">Usuń</a></td>  
                        </tr>
                    {%endfor%}
                </table>
            </div> 
        {%endif%}
    </div>
{% endblock %}